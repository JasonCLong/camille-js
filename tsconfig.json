{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020",
      "lib": ["es2020"],
      "allowJs": true,
      "noEmit": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "noImplicitAny": false
    },
    "include": [
      "src/**/*.ts",
      "types"
    ]
}
